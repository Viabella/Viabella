<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="sale_season_view_tree" model="ir.ui.view">
        <field name="name">sale.season.view.tree</field>
        <field name="model">sale.season</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>

    <record id="sale_season_view_form" model="ir.ui.view">
        <field name="name">sale.season.view.form</field>
        <field name="model">sale.season</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="sale_season_action" model="ir.actions.act_window">
        <field name="name">Sales Season</field>
        <field name="res_model">sale.season</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

     <menuitem
        action="sale_season_action" id="menu_sale_season"
        parent="stock.menu_stock_config_settings"/>
</odoo>
