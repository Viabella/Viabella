<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <button name="action_cancel" position="before">
                <button name="action_on_hold" type="object" string="Hold" 
                attrs="{'invisible': ['|', ('state', 'not in', ['sale']), ('id', '=', False)]}"/>
                <button name="action_unhold" type="object" string="Unhold" 
                attrs="{'invisible': ['|', ('state', 'not in', ['on_hold']), ('id', '=', False)]}"/>
            </button>
            <field name="state" position="attributes">
                <attribute name="statusbar_visible">draft,sent,on_hold,sale</attribute>
            </field>
        </field>
    </record>
</odoo>